<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="WebApp_ID" version="3.0">     
    <display-name>Bridge That Gap</display-name>

<!--   Servlet Mappings  -->    
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.btg.work.action.IndexServlet</servlet-class>
    </servlet>

	<servlet-mapping>
    	<servlet-name>IndexServlet</servlet-name>
    	<url-pattern>/index</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.btg.work.action.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>     

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.btg.work.action.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping> 
        
    <servlet>
        <servlet-name>GetEmployeeServlet</servlet-name>
        <servlet-class>com.btg.work.action.GetEmployeeServlet</servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>GetEmployeeServlet</servlet-name>
        <url-pattern>/getEmployee</url-pattern>
    </servlet-mapping>    
    
    <servlet>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
        <servlet-class>com.btg.work.action.UpdateEmployeeServlet</servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
        <url-pattern>/updateEmployee</url-pattern>
    </servlet-mapping>  
    
    <servlet>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-class>com.btg.work.action.DeleteEmployeeServlet</servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </servlet-mapping>  
   
    <servlet>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-class>com.btg.work.action.AddEmployeeServlet</servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>  
       
<!--   JSP Mappings  -->    
     
<welcome-file-list>
    <welcome-file>index</welcome-file>
</welcome-file-list>
</web-app>